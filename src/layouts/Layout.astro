---
import "../styles/global.css";
---
<!doctype html>
<html
  lang="es"
  class="bg-[var(--color-bg)] text-[var(--color-text)] antialiased selection:bg-[var(--color-primary)] selection:text-white"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Dashboard UI · Cristian Labs</title>

    <!-- Tipografía base -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body
    class="relative font-[Inter] bg-[var(--color-bg)] text-[var(--color-text)] 
           flex flex-col items-center justify-start tracking-tight 
           selection:bg-[var(--color-primary)] selection:text-white 
           min-h-screen"
  >
    <!-- Contenido principal -->
    <main
      class="relative w-full max-w-7xl flex flex-col items-center justify-center px-6 sm:px-10 py-12 sm:py-16 z-10"
    >
      <slot />
    </main>

  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100%;
    background-color: var(--color-bg);
  }

  body {
    transition: background 0.6s ease, color 0.6s ease;
  }
</style>
