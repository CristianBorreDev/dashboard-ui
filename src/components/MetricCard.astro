---
const { title, value, change, trend } = Astro.props;
const trendColor = trend === "up" ? "text-emerald-400" : "text-rose-400";
const trendIcon = trend === "up" ? "▲" : "▼";
---

<div class="group bg-[#0E1012] border border-[#1F2226] rounded-2xl p-5 flex flex-col gap-3 shadow-[0_0_15px_rgba(20,22,24,0.4)] transition-all duration-300 hover:scale-[1.03] hover:shadow-[0_0_20px_rgba(123,92,255,0.25)] hover:border-[#7B5CFF]/40">
  <!-- Título -->
  <div class="text-sm font-medium text-gray-400 tracking-wide group-hover:text-gray-300 transition-colors">
    {title}
  </div>

  <!-- Valor principal -->
  <div class="flex items-end justify-between">
    <h2 class="text-3xl font-semibold text-gray-100 tracking-tight drop-shadow-sm">
      {value}
    </h2>

    <!-- Indicador de tendencia -->
    <div class={`flex items-center gap-1 text-sm font-medium ${trendColor}`}>
      <span class="text-xs opacity-90">{trendIcon}</span>
      <span>{change}</span>
    </div>
  </div>

  <!-- Línea decorativa sutil -->
  <div class="w-full h-[2px] mt-2 bg-gradient-to-r from-transparent via-[#7B5CFF]/30 to-transparent rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
</div>
